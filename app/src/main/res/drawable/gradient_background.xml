<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/transstartbg"
                android:centerColor="@color/transmidbg"
                android:endColor="@color/transendbg"
                android:angle="180"/>
            <corners android:radius="10dp"/>

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/transstartbg2"
                android:centerColor="@color/transmidbg2"
                android:endColor="@color/transendbg2"
                android:angle="180"/>
            <corners android:radius="10dp"/>

        </shape>
    </item>
</selector>


