<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#99234c56"
                android:centerColor="#991a373e"
                android:endColor="#9912232a"
                android:angle="180"/>
            <corners android:radius="10dp"/>
            <stroke
                android:width="2dp"
                android:color="#99FFFFFF"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#99234c56"
                android:centerColor="#991a373e"
                android:endColor="#9912232a"
                android:angle="180"/>
            <corners android:radius="10dp"/>
            <stroke
                android:width="2dp"
                android:color="#99FFFFFF"/>
        </shape>
    </item>
</selector>



